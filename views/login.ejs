<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head'); -%>
		<title>Login</title>
	</head>
	<body>
		<div class="container mt-5">
			<h1>Login</h1>

			<div class="row">
				<div class="col-sm-8">
					<div class="card">
						<div class="card-body">
							<% if (message) { %>
							<label style="color: red;"><%= message %></label>
							<% } %>
							<!-- Makes POST request to /register route -->
							<form action="/login" method="POST">

								<div class="form-group">
									<label for="email">Email*</label>
									<input required=true type="email" class="form-control" name="username">
								</div>
								<div class="form-group">
									<label for="password">Password*</label>
									<input required=true type="password" minlength="7" class="form-control" name="password">
								</div>
								<button type="submit" class="btn btn-dark">Login</button>
							</form>

						</div>
					</div>
				</div>
			</div>
		</div>
		<%- include('partials/scripts'); -%>
	</body>
</html>