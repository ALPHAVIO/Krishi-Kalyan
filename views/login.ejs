<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head'); -%>
		<link rel="stylesheet" href="/css/login.css">
		<title>Login</title>
	</head>
	<body>
		<%- include('partials/navbar'); -%>
		<div class="full d-flex">
			<div class="container-fluid align-self-center">
				<div class="row">
					<div class="col-md-3"></div>
					<div class="col-md-6">
						<h1 class="text-center">Login</h1>
						<div class="card">
							<div class="card-body">
								<% if (message) { %>
									<div class="alert alert-danger" role="alert"><%= message %></div>
								<% } %>
								<form action="/login" method="POST">
									<div class="form-group">
										<label for="email">Email</label>
										<input required=true type="email" class="form-control" name="username">
									</div>
									<div class="form-group">
										<label for="password">Password</label>
										<input required=true type="password" minlength="7" class="form-control" name="password">
									</div>
									<button type="submit" class="btn btn-custom">Login</button>
								</form>
								<div class="mt-3">New Member? <a href="/register">Register Now</a></div>
							</div> 
						</div>
					</div>
				</div>
			</div>
		</div>
		<%- include('partials/scripts'); -%>
	</body>
</html>